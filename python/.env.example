# Environment variables for the audio processor
# Copy this to .env and customize as needed

# Directory settings
OUTPUT_DIR=output
UPLOAD_DIR=uploads

# File settings
MAX_FILE_SIZE=100000000  # 100MB in bytes

# Audio processing settings
DEMUCS_MODEL=htdemucs  # Options: htdemucs, htdemucs_ft, mdx_extra
SAMPLE_RATE=22050
HOP_LENGTH=512

# MIDI settings
DEFAULT_TEMPO=120
MIN_NOTE_DURATION=0.1
DEFAULT_VELOCITY=64

# API settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS settings (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=INFO
